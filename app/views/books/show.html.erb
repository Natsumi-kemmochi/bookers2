<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render partial: 'users/user', locals:{ user: @user, book: @book } %>

  <div class="col-md-8 offset-md-1 text-left">

    <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= @user.name %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
             <% if @book.user == current_user %>
               <td>
                 <%= link_to "edit", edit_book_path(@book.id), class: 'btn btn-success' %>
               </td>
               <td>
                 <%= link_to "delete", book_path(@book), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %>
               </td>
             <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>