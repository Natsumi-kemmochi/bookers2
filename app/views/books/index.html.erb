<div class="col-md-8 offset-md-1">

<%= render partial: 'users/user', locals:{ user: @user, book: @book } %>


<% @books.each do |book| %>
  <div>
   
       <%= image_tag book.user.get_profile_image(100,100) %>
     
     
     <p><%= link_to book_path(book.id) do %>
       <%= book.title %>
       <% end %>
     </p>
       
     <p><%= book.body %></p>
  </div>
<% end %>

</div>