<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render 'user' , user: @user, book: @book %>
 
  <div class="col-md-8 offset-md-1">
      
    <h2>Users</h2>
          <% @users.each do |user| %>
          
        <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
             </tr>
           </thead> 
           <tbody>
             <tr>
               <td>
                 <%= image_tag user.get_profile_image(100,100) %>
               </td>
               <td>
                 <p><%= user.name %></p>
               </td>
               <td>
                 <p><%= link_to  user_path(user.id) do %>Show
                    <% end %>
                 </p> 
               </td>
              </tr>
           </tbody>
         </table>
    <% end %>
    </div>
  </div>
</div>
