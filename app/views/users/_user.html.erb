<div>
  <h2>User info</h1>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>name :<%= user.name %></p>
  <p>introduction  :<%= user.introduction %></p>
  
  <% if user == current_user %>
    <%= link_to "Log in", new_user_session_path, class: 'btn btn-info ' %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
  
</div>

<h2>New book</h1>

<% if book.errors.any? %>
